@model IEnumerable<KTHP.Models.Nhanvien>

@{
    ViewBag.Title = "Index";
}

@{
    var db = new KTHP.Models.Management(); // Thay YourDbContext bằng tên DbContext của bạn
    var phongbans = db.Phongban.ToList();
}
<ul class="nav navbar-nav">
    <li>@Html.ActionLink("Xem danh sách", "Index", "NhanViens")</li>
    @if (Session["hoten"] != null)
    {
        <li>Chào mừng @Session["hoten"]</li>
        <li>@Html.ActionLink("Logout", "Logout", "NhanViens")</li>
    }
    else
    {
        <li>@Html.ActionLink("Login", "Login", "NhanViens")</li>
    }
    <li>@Html.ActionLink("Thêm nhân viên", "Create", "NhanViens")</li>
    <ul class="nav navbar-nav">
        @foreach (var pb in phongbans)
        {
            <li>@Html.ActionLink(pb.tenphong, "PhongBan", "NhanViens", new { maphong = pb.maphong }, null)</li>
        }
    </ul>
</ul>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Phongban.tenphong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hotennv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tuoi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.diachi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.luongnv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.matkhau)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Phongban.tenphong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hotennv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tuoi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.diachi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.luongnv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.matkhau)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.manv }) |
                @Html.ActionLink("Details", "Details", new { id = item.manv }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.manv })
            </td>
        </tr>
    }

</table>
